<?xml version="1.0" encoding="UTF-8"?>

<Bitmap2OTFFontParameters>
	<TemplateTTX src="template.ttx"/>
	<Output path="sample.otf"/>
	<FontInfo>
		<setting key="ascent" value="9"/><!-- pixels -->
		<setting key="descent" value="2"/><!-- pixels -->
		<setting key="x-height" value="5"/><!-- pixels -->
		<!-- parameters for vertical writing:
		<setting key="vertascent" value="6"/>
		<setting key="vertdescent" value="6"/>
		-->
		<setting key="bold" value="0"/><!-- 0 or 1 -->
		<setting key="italic" value="0"/><!-- 0 or 1 -->
		<namerecords platformID="1,3" platEncID="0,1" langID="0x0,0x409" useAsCFFNames="True">
			<!-- English (United States) -->
			<namerecord key="copyright" value="(C) 20XX MyName"/>
			<namerecord key="fontFamily" value="MySample"/>
			<namerecord key="subfamily" value="Regular"/>
			<namerecord key="uniqueID" value="Bitmap2OTF : MySample Regular : 20XX-XX-XX"/>
			<namerecord key="fullName" value="MySample Regular"/>
			<namerecord key="version" value="Version 0.1"/>
			<namerecord key="postscriptName" value="MySample"/><!-- permitted characters: 0-9,A-Z,a-z and !"#$&'*+,-.:;=?@\^_`| (space is not permitted) -->
			<namerecord key="preferredFamily" value="MySample"/>
			<namerecord key="preferredSubfamily" value="Regular"/>
		</namerecords>
		<namerecords platformID="1,3" platEncID="1,1" langID="0xb,0x411">
			<!-- Japanese (Japan) -->
			<namerecord key="copyright" value="(C) 20XX 我が名"/>
			<namerecord key="fontFamily" value="マイ・サンプル"/>
			<namerecord key="subfamily" value="標準"/>
			<namerecord key="fullName" value="マイ・サンプル 標準"/>
			<namerecord key="version" value="バージョン 0.1"/>
			<namerecord key="preferredFamily" value="マイ・サンプル"/>
			<namerecord key="preferredSubfamily" value="標準"/>
		</namerecords>
	</FontInfo>
	<Outline>
		<!-- em size will be (ascent + descent) * DotSize_y. -->
		<DotSize x="100.0" y="100.0"/>

		<!-- shape of each dot -->
		<DotShape type="pixel-outline"/>
		<!-- or custom shape defined in a separate file: (circle dot 80% width, 70% height)
			<DotShape src="shapes/circle.xml" width="0.8" height="0.7"/>
		-->
	</Outline>

	<Bitmap/><!-- if omitted, EBDT/EBLC tables are not included in the generated font -->

	<GlyphSources bitmapwidth="5" bitmapheight="11" originx="0" originy="2" advancewidth="6" advanceheight="12"><!-- default values -->

		<!-- embed bitmap data -->
		<BitmapData name=".notdef"><!-- no codepoint -->
			<!-- ".", "0" and space(U+0020) are white, other characters are black; newlines and tab characters are ignored. -->
			.....
			.....
			@@@@@
			@...@
			@@.@@
			@.@.@
			@@.@@
			@...@
			@@@@@
			.....
			.....
		</BitmapData>

		<!-- include glyphs which has no contours -->
		<Space name=".null" codepoint="0" advancewidth="0"/>
		<Space name="CR" codepoint="0x0D" advancewidth="6"/>
		<Spaces>
			<!-- newlines and tab characters are ignored. -->
			&#x0020;&#x00A0;
		</Spaces>
		<Spaces advancewidth="12">
			&#x3000;
		</Spaces>

		<!-- include glyphs from an image file -->
		<!-- Note: Color of the glyph must be black (#000000). Glyphs must be in the actual size (one pixel per one dot). -->
		<Image src="sample.png">
			<!-- top-left pixel is x=0,y=0 -->
			<Glyphs x="5" y="3" stepx="8" stepy="13" charsPerRow="16">
				<!-- newlines and tab characters are ignored; space characters are not ignored. -->
				<!--
				Put a space character(U+0020) where there is no glyph or there is a glyph you don't want to include in the font.
				Characters which already have a glyph are ignored.
				-->
				 !"#$%&amp;'()*+,-./
				0123456789:;&lt;=&gt;?
				@ABCDEFGHIJKLMNO
				PQRSTUVWXYZ[\]^_
				`abcdefghijklmno
				pqrstuvwxyz{|}~
				<!--
					<Glyph name="g.salt"/>
				-->
			</Glyphs>
			<Glyph x="5" y="81" name="g.salt"/><!-- glyph with no codepoint -->
		</Image>

		<!-- copying glyphs -->
		<!-- Note: the source glyph must be included beforehand. -->
		<Copy fromChar="A" char="Ａ" advancewidth="12"/><!-- from U+0041(Latin Capital Letter A) to U+FF21(Fullwidth Latin Capital Letter A) -->
		<!-- 'fromCodepoint' and 'fromName' attributes are also accepted -->

	</GlyphSources>
	<Effects>
		<translate x="3" y="0">
			<!-- Glyphs to apply the effect -->
			Ａ
			<!-- or like
				<Glyph codepoint="0xFF21"/>
			-->
		</translate>
		<!--
			<translate x="2" y="1">...</translate>  .... translate the glyph to the right by x and to the top by y
			<rotate n="1">...</rotate>              .... rotate the glyph n*90 degree clockwise around the origin
			<scale x="2" y="2">...</scale>          .... scale the glyph by x*y
		-->

		<!-- Note: If you are applying these effects, you will have to change the "bold" or "italic" parameter (in the FontInfo section).-->
		<!--
			<makebold boldtype="0" x="1" y="0"><AllGlyphs/></makebold>
			<makeitalic cotangent="3"><AllGlyphs/></makeitalic>
		-->
	</Effects>

	<!-- optional: TTX file of additional tables. This TTX file will be import just before compiling -->
	<TemplateTTX2 src="sample_gsub.ttx"/>
</Bitmap2OTFFontParameters>
